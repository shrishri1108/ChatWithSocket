<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/clReaction"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvReaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/llReactions"
            android:background="@android:color/transparent"
            android:padding="5dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvHappyReaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="😊"
                android:textSize="27sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvComedyReaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginStart="5dp"
                android:text="😂"
                android:textSize="27sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSadReaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="😔"
                android:background="@null"
                android:textSize="27sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvGoodReaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@null"
                android:text="👌"
                android:textSize="27sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvKeepReaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@null"
                android:text="👍"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/tvMoreReaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginStart="5dp"
                android:text="➕"
                android:textSize="27sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>